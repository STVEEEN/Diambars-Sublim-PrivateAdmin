{
    "buildCommand": "npm ci --legacy-peer-deps && npm run build",
    "installCommand": "npm ci --legacy-peer-deps",
    "framework": "vite",
    "outputDirectory": "dist",
    "functions": {
      "app/api/**/*.js": {
        "runtime": "nodejs18.x"
      }
    },
    "env": {
      "NODE_ENV": "production"
    },
    "build": {
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=4096"
      }
    }
  }